<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <View
        android:id="@+id/more_wx_service_statusBarview"
        style="@style/statusBar" />

    <com.delevin.shenghuidai.view.TitleView
        android:id="@+id/more_wx_service_titleview"
        android:layout_width="match_parent"
        android:layout_height="50dp" >
    </com.delevin.shenghuidai.view.TitleView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textSize="17sp"
        	android:textColor="#333"
        	android:layout_marginLeft="16dp"
        	android:layout_marginRight="16dp"
        	android:text="微信号已复制成功，按照以下步骤进行关注" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView1"
            android:layout_marginLeft="16dp"
        	android:layout_marginRight="16dp"
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:textColor="#666"
        	android:text="1、打开微信" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"
            android:layout_marginLeft="16dp"
        	android:layout_marginRight="16dp"
            android:textColor="#666"
        	android:textSize="15sp"
        	android:paddingTop="5dp"
        	android:text="2、在通讯录中“添加好友”"  />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView3"
            android:layout_marginLeft="16dp"
        	android:layout_marginRight="16dp"
            android:textColor="#666"
        	android:textSize="15sp"
        	android:paddingTop="5dp"
        	android:text="3、将微信号粘贴到搜索框里" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView4"
            android:layout_marginLeft="16dp"
        	android:layout_marginRight="16dp"
            android:textSize="15sp"
        	android:paddingTop="5dp"
        	android:textColor="#666"
        	android:text="4、点击搜索" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView5"
            android:layout_centerHorizontal="true"
            android:src="@drawable/weixindome" />

    </RelativeLayout>

</LinearLayout>
