<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="18dp"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    android:paddingTop="30dp" >

    <EditText
        android:id="@+id/view_pay_not_idBind_bankCode"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/boluos_shape_common_view_stroke_10"
        android:gravity="center_vertical"
        android:hint="输入银行卡"
        android:paddingLeft="20dp"
        android:textColor="@color/base_application_black_font"
        android:textColorHint="@color/base_application_deep_red"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/view_pay_not_idBind_Name"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/boluos_shape_common_view_stroke_10"
        android:gravity="center_vertical"
        android:hint="您的真实姓名"
        android:paddingLeft="20dp"
        android:textColor="@color/base_application_black_font"
        android:textColorHint="@color/base_application_deep_red"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/view_pay_not_idBind_idCode"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="-2dp"
        android:background="@drawable/boluos_shape_common_view_stroke_10"
        android:gravity="center_vertical"
        android:hint="您的身份证号"
        android:paddingLeft="20dp"
        android:textColor="@color/base_application_black_font"
        android:textColorHint="@color/base_application_deep_red"
        android:textSize="16sp" />
    
    <EditText
        android:id="@+id/view_pay_not_idBind_phone"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="-2dp"
        android:background="@drawable/boluos_shape_common_view_stroke_10"
        android:gravity="center_vertical"
        android:hint="银行预留手机号"
        android:paddingLeft="20dp"
        android:textColor="@color/base_application_black_font"
        android:textColorHint="@color/base_application_deep_red"
        android:textSize="16sp" />

</LinearLayout>