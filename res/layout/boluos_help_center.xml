<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_application_bakcground"
    android:orientation="vertical" >

    <View
        android:id="@+id/statusBarview"
        style="@style/statusBar" />

    <com.delevin.shenghuidai.view.TitleView
        android:id="@+id/titleView_listview_jiazai"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="97dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/help_center_banner" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="1px" >

            <TextView
                android:id="@+id/boluos_help_faq"
                style="@style/help_center_list_item"
                android:drawableTop="@drawable/help_center_faq"
                android:text="常见问题" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/base_application_bakcground" />

            <TextView
                android:id="@+id/boluos_help_tel"
                style="@style/help_center_list_item"
                android:drawableTop="@drawable/help_center_hotline"
                android:text="咨询电话" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="1px" >

            <TextView
                android:id="@+id/boluos_help_online"
                style="@style/help_center_list_item"
                android:drawableTop="@drawable/help_center_online"
                android:text="在线客服" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/base_application_bakcground" />

            <TextView
                android:id="@+id/boluos_help_wechat"
                style="@style/help_center_list_item"
                android:drawableTop="@drawable/help_center_wechat"
                android:text="微信公众号" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="1px" >

            <TextView
                android:id="@+id/boluos_help_email"
                style="@style/help_center_list_item"
                android:drawableTop="@drawable/help_center_email"
                android:text="客户邮箱" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/base_application_bakcground" />

            <TextView
                android:id="@+id/boluos_help_feedback"
                style="@style/help_center_list_item"
                android:drawableTop="@drawable/help_center_feedback"
                android:text="意见反馈" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>