<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <LinearLayout
            android:id="@+id/fragment_shareyaoqing_fanli_lin_bottom_tab"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:orientation="horizontal" 
            android:baselineAligned="true"
            android:background="#f7f7f7">

            <RelativeLayout
                android:id="@+id/fragment_shareyaoqing_fanli_rl_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0" >
                
                <TextView
                    android:id="@+id/fragment_shareyaoqing_fanli_tv_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="日期"
                    android:textSize="14sp"
                  	android:textColor="#666" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/fragment_shareyaoqing_fanli_rl_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0" >

                
                <TextView
                    android:id="@+id/fragment_shareyaoqing_fanli_tv_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="好友"
                    android:textSize="14sp"
                  	android:textColor="#666" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/fragment_shareyaoqing_fanli_rl_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:layout_weight="1.0" >

                
                <TextView
                    android:id="@+id/fragment_shareyaoqing_fanli_tv_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="金额"
                    android:textSize="14sp"
                  	android:textColor="#666" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/fragment_shareyaoqing_fanli_rl_4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:layout_weight="1.0" >

                
                <TextView
                    android:id="@+id/fragment_shareyaoqing_fanli_tv_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="期限"
                    android:textSize="14sp"
                  	android:textColor="#666" />
            </RelativeLayout>
            
            <RelativeLayout
                android:id="@+id/fragment_shareyaoqing_fanli_rl_5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0" >

                
                <TextView
                    android:id="@+id/fragment_shareyaoqing_fanli_tv_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="收入"
                    android:textSize="14sp"
                  	android:textColor="#666" />
            </RelativeLayout>
            
        </LinearLayout>
    
    
    
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/fragment_shareyaoqing_fanli_lin_bottom_tab"
    android:orientation="vertical" >
    <com.delevin.shenghuidai.view.ListView.XListView
        android:id="@+id/fragment_share_yaoqing_fanli_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" >
    </com.delevin.shenghuidai.view.ListView.XListView>
    
    <LinearLayout
        android:id="@+id/fragment_share_yaoqing_fanli_kfcs_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:background="#4b000000"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/fragment_share_yaoqing_fanli_kfcs_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/jiazai" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom|center_horizontal"
            android:text="请稍后"
            android:textColor="@color/white" />
    </LinearLayout>
 <RelativeLayout
            android:id="@+id/fragment_share_yaoqing_fanli__kfc_none"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" >

            <ImageView
            android:id="@+id/listview_jiazai_img_none"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/boluo_nonebid" />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/listview_jiazai_img_none"
            android:layout_marginTop="5dp"
            android:text="暂无数据" />
        </RelativeLayout>
</FrameLayout>
</RelativeLayout>

