<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:zhushp="http://schemas.android.com/apk/res/com.yourenkeji.shenghuidai"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg"
    android:orientation="vertical"
    tools:context=".MyZichanActivity" >

    <View
        android:id="@+id/statusBarview"
        style="@style/statusBar" />

    <com.delevin.shenghuidai.view.TitleView
        android:id="@+id/titleView_denglu"
        android:layout_width="match_parent"
        android:layout_height="50dp" >
    </com.delevin.shenghuidai.view.TitleView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:orientation="vertical" >

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="#fff"
            android:baselineAligned="false"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/linearLa_seller_description"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bid_detals_radiobutton_selector"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:text="密码登录"
                android:textColor="@color/color_radiobutton" />

            <View
                android:layout_width="2px"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:background="@color/base_application_bakcground" />

            <RadioButton
                android:id="@+id/linearLa_purchase_process"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bid_detals_radiobutton_selector"
                android:button="@null"
                android:gravity="center"
                android:text="验证码登录"
                android:textColor="@color/color_radiobutton" />
        </RadioGroup>
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/mViewpagerS"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>