<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/huise"
    android:orientation="vertical" >

    <View
        android:id="@+id/statusBarview"
        style="@style/statusBar" />

    <com.delevin.shenghuidai.view.TitleView
        android:id="@+id/titleView_bidDetals"
        android:layout_width="match_parent"
        android:layout_height="50dp" >
    </com.delevin.shenghuidai.view.TitleView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/boluo_bid_detail_title_layout_background"
                android:paddingBottom="54dp"
                android:paddingTop="25dp"
                android:src="@drawable/boluo_login_logo" />

            <com.delevin.shenghuidai.view.ClearEditText
                android:id="@+id/zhu_phone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/boluos_shape_common_view_stroke"
                android:drawableLeft="@drawable/boluo_login_phone_number"
                android:drawablePadding="10dp"
                android:hint="请输入您手机号"
                android:maxLength="11"
                android:numeric="decimal"
                android:paddingLeft="10dp"
                android:textColorHint="@color/gggggg"
                android:textSize="13sp" />

            <Button
                android:id="@+id/zhu_bt"
                style="@style/shape_bt_niu"
                android:layout_width="270dp"
                android:layout_height="40dp"
                android:layout_marginBottom="25dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/boluo_button_shadow_red_background"
                android:text="下一步"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="胜辉贷不会在任何地方泄露您的手机号"
                android:textColor="@color/gggggg"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/zhu_visibility_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="#4b000000"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/zhu_visibility_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/jiazai" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom|center_horizontal"
                android:text="请稍后"
                android:textColor="@color/white" />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>