<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:orientation="vertical" >    <View        android:id="@+id/statusBarview"        style="@style/statusBar" />    <com.delevin.shenghuidai.view.TitleView        android:id="@+id/titleView_payBind"        android:layout_width="match_parent"        android:layout_height="50dp" >    </com.delevin.shenghuidai.view.TitleView>    <FrameLayout        android:layout_width="match_parent"        android:layout_height="match_parent" >        <ScrollView            android:layout_width="match_parent"            android:layout_height="match_parent"            android:fillViewport="true"            android:scrollbars="none" >            <LinearLayout                android:layout_width="match_parent"                android:layout_height="match_parent"                android:background="@color/white"                android:orientation="vertical" >                <LinearLayout                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:background="@drawable/boluo_bid_detail_title_layout_background"                    android:orientation="vertical"                    android:paddingLeft="20dp"                    android:paddingRight="20dp" >                    <TextView                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:layout_marginBottom="15dp"                        android:layout_marginTop="20dp"                        android:alpha="0.7"                        android:text="我的余额"                        android:textColor="@color/white"                        android:textSize="13sp" />                    <TextView                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:text="￥"                        android:textColor="@color/white"                        android:textSize="12sp" />                    <TextView                        android:id="@+id/pay_bind_my_balance_tv"                        android:layout_width="match_parent"                        android:layout_height="wrap_content"                        android:layout_marginLeft="10dp"                        android:ellipsize="end"                        android:singleLine="true"                        android:text="0.00"                        android:textColor="@color/white"                        android:textSize="50sp" />                    <View                        android:layout_width="match_parent"                        android:layout_height="1dp"                        android:layout_marginBottom="20dp"                        android:layout_marginTop="10dp"                        android:alpha="0.3"                        android:background="@color/white" />                    <LinearLayout                        android:layout_width="match_parent"                        android:layout_height="wrap_content"                        android:layout_marginBottom="20dp"                        android:orientation="horizontal" >                        <TextView                            android:id="@+id/danri_danbi"                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:text=""                            android:textColor="@color/white"                            android:textSize="11sp" />                        <TextView                            android:visibility="invisible"                            android:id="@+id/add_pay_tv_see_xiane"                            android:layout_width="wrap_content"                            android:layout_height="wrap_content"                            android:autoLink="all"                            android:text="查看限额"                            android:textColor="@color/white"                            android:textSize="11sp" />                    </LinearLayout>                </LinearLayout>                <RelativeLayout                    android:id="@+id/add_pay_layout_bank"                    android:layout_width="match_parent"                    android:layout_height="50dp"                    android:layout_marginLeft="15dp"                    android:layout_marginRight="15dp"                    android:layout_marginTop="10dp"                    android:background="@drawable/boluos_shape_common_view_stroke" >                    <ImageView                        android:id="@+id/add_pay_img_bank"                        android:layout_width="35dp"                        android:layout_height="35dp"                        android:layout_alignParentLeft="true"                        android:layout_centerVertical="true"                        android:layout_marginLeft="10dp"                        android:layout_marginRight="12dp"                        android:scaleType="centerCrop"                        android:src="@drawable/gsyh" />                    <TextView                        android:id="@+id/add_pay_tv_bank_name"                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:layout_centerVertical="true"                        android:layout_toRightOf="@+id/add_pay_img_bank"                        android:text="****"                        android:textColor="@color/base_application_black_font"                        android:textSize="13sp" />                    <TextView                        android:id="@+id/add_pay_tv_bank_state"                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:layout_centerVertical="true"                        android:layout_toRightOf="@+id/add_pay_tv_bank_name"                        android:text="（借记卡）"                        android:textColor="@color/base_application_black_font"                        android:textSize="12sp" />                    <TextView                        android:id="@+id/add_pay_tv_bank_id"                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:layout_alignParentRight="true"                        android:layout_centerVertical="true"                        android:layout_marginRight="10dp"                        android:text="************"                        android:textColor="@color/base_application_black_font"                        android:textSize="12sp" />                </RelativeLayout>                <RelativeLayout                    android:layout_width="match_parent"                    android:layout_height="50dp"                    android:layout_marginBottom="10dp"                    android:layout_marginLeft="15dp"                    android:layout_marginRight="15dp"                    android:layout_marginTop="10dp"                    android:background="@drawable/boluos_shape_common_view_stroke"                    android:gravity="center_vertical"                    android:orientation="horizontal" >                    <TextView                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:layout_alignParentLeft="true"                        android:layout_centerVertical="true"                        android:layout_marginLeft="10dp"                        android:text="充值金额"                        android:textColor="@color/base_application_black_font"                        android:textSize="13sp" />                    <com.delevin.shenghuidai.view.ClearEditText                        android:id="@+id/pay_bind_money"                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:layout_alignParentRight="true"                        android:layout_centerVertical="true"                        android:layout_marginRight="10dp"                        android:background="@null"                        android:gravity="right"                        android:hint="请输入充值的金额(元)"                        android:numeric="decimal"                        android:textColor="@color/base_application_deep_red"                        android:textColorHint="@color/base_application_lite_grey_font"                        android:textSize="12sp" />                </RelativeLayout>                <RelativeLayout                    android:layout_width="match_parent"                    android:layout_height="50dp"                    android:layout_marginLeft="15dp"                    android:layout_marginRight="15dp"                    android:background="@drawable/boluos_shape_common_view_stroke" >                    <TextView                        android:id="@+id/textView5"                        android:layout_width="wrap_content"                        android:layout_height="wrap_content"                        android:layout_alignParentRight="true"                        android:layout_centerVertical="true"                        android:layout_marginRight="10dp"                        android:text="仅支持本人借记卡充值"                        android:textColor="@color/base_application_lite_grey_font"                        android:textSize="12sp" />                    <TextView                        android:layout_width="wrap_content"                        android:layout_height="match_parent"                        android:layout_alignParentLeft="true"                        android:layout_centerVertical="true"                        android:layout_marginLeft="10dp"                        android:gravity="center_vertical"                        android:text="支持卡"                        android:textColor="@color/base_application_black_font"                        android:textSize="13sp" />                </RelativeLayout>                <Button                    android:id="@+id/bt_pay_bind"                    android:layout_width="fill_parent"                    android:layout_height="45dp"                    android:layout_marginLeft="15dip"                    android:layout_marginRight="15dip"                    android:layout_marginTop="50dp"                    android:background="@drawable/boluo_button_shadow_red_background"                    android:gravity="center"                    android:text="下一步"                    android:textColor="@color/white"                    android:textSize="16sp" />            </LinearLayout>        </ScrollView>        <LinearLayout            android:id="@+id/pay_bind_lin_later"            android:layout_width="match_parent"            android:layout_height="match_parent"            android:layout_gravity="center"            android:background="#4b000000"            android:clickable="true"            android:gravity="center"            android:orientation="vertical"            android:visibility="visible" >            <ImageView                android:id="@+id/pay_bind_img_later"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:src="@drawable/jiazai" />            <TextView                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:gravity="bottom|center_horizontal"                android:text="请稍后"                android:textColor="@color/white" />        </LinearLayout>    </FrameLayout></LinearLayout>