<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <LinearLayout
            android:id="@+id/item_yaoqingjilu_lin"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" 
            android:baselineAligned="true">

            <RelativeLayout
                android:id="@+id/item_yaoqingjilu_rl_yonghuming"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0" >
                
                <TextView
                    android:id="@+id/item_yaoqingjilu_tv_yonghuming"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="用户名"
                    android:textSize="14sp"
                  	android:textColor="#666" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/item_yaoqingjilu_rl_zhuceshijian"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0" >

                
                <TextView
                    android:id="@+id/item_yaoqingjilu_tv_zhuceshijian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="注册时间"
                    android:textSize="14sp"
                  android:textColor="#666" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/item_yaoqingjilu_rl_hongbao"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0" >

                
                <TextView
                    android:id="@+id/item_yaoqingjilu_tv_hongbao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="是否得红包"
                    android:textSize="14sp"
                  android:textColor="#666" />
            </RelativeLayout>
            
        </LinearLayout>

</RelativeLayout>
