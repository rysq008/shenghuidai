<?xml version="1.0" encoding="UTF-8"?>
<com.cjj.MaterialRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.yourenkeji.shenghuidai"
    android:id="@+id/my_pull"
    style="@style/refresh_layout_style" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/base_application_bakcground"
        android:fillViewport="true"
        android:scrollbars="none" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:background="@drawable/boluo_bid_detail_title_layout_background"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="9dp" >

                        <TextView
                            android:id="@+id/my_tv_headpic"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/my_account_head_icon"
                            android:gravity="center_vertical"
                            android:paddingLeft="15dp"
                            android:text="普通用户"
                            android:textColor="#ccffffff"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/my_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:text="您好"
                            android:textColor="@color/white"
                            android:textSize="18sp" />

                        <CheckBox
                            android:id="@+id/my_eyes_checkbox"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:background="@drawable/eyes_bg"
                            android:button="@null" />
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/my_yes_bankcard"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:visibility="gone" >

                        <RelativeLayout
                            android:id="@+id/my_total_layout"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center" >

                            <TextView
                                android:id="@+id/textView1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:text="总资产（元）"
                                android:textColor="@color/white"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/my_total_money"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:text="---"
                                android:textColor="@color/white"
                                android:textSize="30sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/my_balance_layout"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/my_total_layout"
                            android:layout_weight="1"
                            android:gravity="center" >

                            <TextView
                                android:id="@+id/textView2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:text="账户余额（元）"
                                android:textColor="@color/white"
                                android:textSize="15sp" />

                            <ImageView
                                android:id="@+id/imageView1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="2dp"
                                android:layout_toRightOf="@+id/textView2"
                                android:src="@drawable/my_big_bid" />

                            <TextView
                                android:id="@+id/my_balance_money"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:text="---"
                                android:textColor="@color/white"
                                android:textSize="30sp" />
                        </RelativeLayout>
                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/my_not_bankcard"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:visibility="gone" >

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:text="即刻绑卡，玩转胜辉贷"
                            android:textColor="@color/white"
                            android:textSize="15sp" />

                        <Button
                            android:id="@+id/My_bangdingbankcard"
                            android:layout_width="135dp"
                            android:layout_height="33dp"
                            android:layout_below="@+id/textView3"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="20dp"
                            android:background="#ac2d1f"
                            android:text="绑定卡号"
                            android:textColor="@color/white"
                            android:textSize="15sp" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/my_touzi_tv"
                        style="@style/my_touzi_grid_item"
                        android:drawableLeft="@drawable/my_touzi"
                        android:text="投资记录" />

                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="@color/base_application_bakcground" />

                    <TextView
                        android:id="@+id/my_return_tv"
                        style="@style/my_touzi_grid_item"
                        android:drawableLeft="@drawable/my_return_caleandar"
                        android:text="待收明细" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:layout_marginTop="1px"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/my_pay"
                        style="@style/my_touzi_grid_item"
                        android:drawableLeft="@drawable/my_recharge"
                        android:drawablePadding="-60dp"
                        android:text="充值" />

                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="@color/base_application_bakcground" />

                    <TextView
                        android:id="@+id/my_tixian"
                        style="@style/my_touzi_grid_item"
                        android:drawableLeft="@drawable/my_withdraw_cash"
                        android:drawablePadding="-60dp"
                        android:text="提现" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:paddingBottom="75dp" >

                    <TextView
                        android:id="@+id/my_money_tv"
                        style="@style/my_touzi_list_item"
                        android:drawableLeft="@drawable/my_money"
                        android:text="资金记录" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="43dp"
                        android:background="@color/base_application_bakcground" />

                    <RelativeLayout
                        android:id="@+id/my_page_layout"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@color/white" >

                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="15dp"
                            android:src="@drawable/my_page" />

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/imageView4"
                            android:text="我的优惠券"
                            android:textColor="@color/base_application_black_font"
                            android:textSize="15sp" />

                        <ImageView
                            android:id="@+id/imageView8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="15dp"
                            android:background="@drawable/my_title_bid" />

                        <TextView
                            android:id="@+id/my_redPacketNumBer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/textView5"
                            android:textColor="#de2400"
                            android:textSize="16sp" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="43dp"
                        android:background="@color/base_application_bakcground" />

                    <TextView
                        android:id="@+id/my_bank_tv"
                        style="@style/my_touzi_list_item"
                        android:drawableLeft="@drawable/my_bank"
                        android:text="我的银行卡"
                        android:visibility="gone" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginLeft="43dp"
                        android:background="@color/base_application_bakcground" />

                    <TextView
                        android:id="@+id/my_safe_tv"
                        style="@style/my_touzi_list_item"
                        android:drawableLeft="@drawable/my_safe"
                        android:text="安全管理" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="43dp"
                        android:background="@color/base_application_bakcground" />

                    <TextView
                        android:id="@+id/my_info_tv"
                        style="@style/my_touzi_list_item"
                        android:drawableLeft="@drawable/my_info"
                        android:text="个人信息" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="43dp"
                        android:background="@color/base_application_bakcground" />

                    <TextView
                        android:id="@+id/my_many_tv"
                        style="@style/my_touzi_list_item"
                        android:drawableLeft="@drawable/my_many"
                        android:text="更多" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="43dp"
                        android:background="@color/base_application_bakcground" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mys_visibility_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="#4b000000"
                android:clickable="true"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="visible" >

                <ImageView
                    android:id="@+id/mys_visibility_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/jiazai" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom|center_horizontal"
                    android:text="请稍后"
                    android:textColor="@color/white" />
            </LinearLayout>
        </FrameLayout>
    </ScrollView>

</com.cjj.MaterialRefreshLayout>