<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="85dp"
    android:background="@color/white"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/item_calendar_iv"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:scaleType="fitStart"
        android:src="@drawable/red_stroke_icon" />

    <LinearLayout
        android:id="@+id/item_calendar_content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/item_calendar_iv"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/item_calendar_month_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="07.06"
            android:textColor="@color/base_application_black_font"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/item_calendar_income_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="本金1000元+收益100元"
            android:textColor="@color/base_application_black_font"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_calendar_content_layout"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/item_calendar_iv"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/item_calendar_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017年"
            android:textColor="@color/base_application_lite_grey_font"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_calendar_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="供应链新手标"
            android:textColor="@color/base_application_lite_grey_font"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_calendar_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="3期"
            android:textColor="@color/base_application_lite_grey_font"
            android:textSize="12sp" />
    </LinearLayout>

</RelativeLayout>